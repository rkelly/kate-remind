<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Remind"
    version="0.1"
    kateversion="2.4"
    section="Scripts"
    extensions="*.rem;*.remind"
    casesensitive="0"
    author="Richard Kelly (richard@kelly.ws)"
    license="GPL">
<highlighting>
    <!-- http://manpages.ubuntu.com/manpages/wily/en/man1/remind.1.html -->
    <list name="command">
        <item>REM</item>
        <item>SET</item>
        <item>FSET</item>
    </list>
    <list name="keyword">
        <item>ONCE</item>
        <item>PRIORITY</item>
        <item>SKIP</item>
        <item>BEFORE</item>
        <item>AFTER</item>
        <item>OMIT</item>
        <item>OMITFUNC</item>
        <item>AT</item>
        <item>SCHED</item>
        <item>WARN</item>
        <item>UNTIL</item>
        <item>THROUGH</item>
        <item>SCANFROM</item>
        <item>FROM</item>
        <item>DURATION</item>
        <item>TAG</item>
        <item>MSG</item>
        <item>MSF</item>
        <item>RUN</item>
        <item>CAL</item>
        <item>SATISFY</item>
        <item>SPECIAL</item>
        <item>PS</item>
        <item>PSFILE</item>
    </list>
    <contexts>
    <context attribute="Normal Text" lineEndContext="#pop" name="Normal Text" >
        <DetectChar attribute="Comment" context="Comment" char=";" /> <!--if DetectChar ";", set style to comment, and switch context to Comment-->
        <DetectChar attribute="Comment" context="Comment" char="#" /> <!--if DetectChar "#", set style to comment, and switch context to Comment-->
        <keyword attribute="Keyword" context="#stay" String="command" />
        <keyword attribute="Function" context="#stay" String="keyword" />
        <RegExpr attribute="Variable" context="#stay" String="[a-zA-Z]*" /> <!-- message body -->
        <DetectChar attribute="String" context="String" char="&quot;" /> <!--if DetectChar "&quot;", style as String, switch to String context-->
        <Int attribute="Int" context="#stay" /> <!--if Int, style as Int-->
        <Float attribute="Float" context="#stay" /> <!--if Float, style as Float-->
    </context>
    
    <!--child contexts-->
    <context attribute="String" lineEndContext="#stay" name="String" >
        <HlCStringChar attribute="Atom" context="#stay"/> <!-- if detect an escaped character, stay in context -->
        <DetectChar attribute="String" context="#pop" char="&quot;" /> <!--if DetectChar "&quot;", style as String, pop out of child context-->
    </context>

    <context name="Comment" attribute="Comment" lineEndContext="#pop">
        <IncludeRules context="##Alerts_indent"/>
    </context>

    </contexts>

    <itemDatas>
    <itemData name="Normal Text" defStyleNum="dsNormal" />
    <itemData name="Keyword" defStyleNum="dsKeyword" /> <!--not reaching here-->
    <itemData name="String" defStyleNum="dsString" />
    <itemData name="Function" defStyleNum="dsFunction" />
    <!--<itemData name="Control Flow" defStyleNum="dsControlFlow" />-->
    <itemData name="Operator" defStyleNum="dsOperator" />
    <itemData name="Constant" defStyleNum="dsBuiltIn" />
    <itemData name="Variable" defStyleNum="dsVariable" />
    <itemData name="Atom" defStyleNum="dsChar" />
    <itemData name="Int" defStyleNum="dsDecVal" />
    <itemData name="Float" defStyleNum="dsFloat" />
    <itemData name="Comment" defStyleNum="dsComment"/>
    </itemDatas>
</highlighting>

<!-- Global settings. -->
<general>
    <comments>
        <comment name="singleLine" start="#" />
    </comments>
    <keywords casesensitive="0" />
    <emptyLines>
        <emptyLine regexpr="(?:\s+|\s*#.*)" />
    </emptyLines>
</general>
 
</language>
